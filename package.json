{
  "name": "raycast-halo-extension",
  "title": "Halo",
  "description": "Halo integration for Raycast",
  "icon": "logo.png",
  "author": "ryanwang",
  "license": "MIT",
  "commands": [
    {
      "name": "posts",
      "title": "Search Posts",
      "subtitle": "",
      "description": "Search posts in my halo website.",
      "mode": "view"
    },
    {
      "name": "attachments",
      "title": "Search Attachments",
      "subtitle": "",
      "description": "Search attachments in my halo website.",
      "mode": "view"
    },
    {
      "name": "journals",
      "title": "Search Journals",
      "subtitle": "",
      "description": "Search Journals in my halo website.",
      "mode": "view"
    },
    {
      "name": "journal_create",
      "title": "Create Journal",
      "subtitle": "",
      "description": "Create journal in my halo website.",
      "mode": "view"
    },
    {
      "name": "github_releases",
      "title": "Check Halo Releases",
      "subtitle": "",
      "description": "Check halo releases from github.",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "siteurl",
      "type": "textfield",
      "title": "Site Url",
      "required": true,
      "default": "",
      "description": "Halo Site Url"
    },
    {
      "name": "username",
      "type": "textfield",
      "title": "Username",
      "required": true,
      "default": "",
      "description": "Halo Username"
    },
    {
      "name": "password",
      "type": "password",
      "title": "Password",
      "required": true,
      "default": "",
      "description": "Halo Password"
    }
  ],
  "dependencies": {
    "@halo-dev/admin-api": "^1.0.0-alpha.44",
    "@raycast/api": "^1.25.7",
    "axios": "^0.24.0",
    "dayjs": "^1.10.7"
  },
  "devDependencies": {
    "@types/node": "~16.10.9",
    "@types/react": "^17.0.37",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "prettier": "^2.5.1",
    "react-devtools": "^4.21.0",
    "typescript": "^4.5.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "lint": "ray lint"
  }
}
